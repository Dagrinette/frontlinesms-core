<?xml version="1.0" encoding="UTF-8"?>
<tab icon="/icons/big_translate.png" text="Translate" name=":translation">
    <panel bottom="9" columns="2" gap="9" left="9" right="9" top="9" weightx="1" weighty="1">
    	<label icon="/icons/header/translation.png" valign="top" />
       	<splitpane weighty="1" weightx="1" rowspan="2" orientation="horizontal">
			<panel gap="8" weightx="2" weighty="2" columns="1">
	    		<label text="i18n.common.select.language"/>
	    		<list name="lsLanguages" action="languageSelectionChanged" selection="single" weighty="1" weightx="1"/>
			</panel>
			<panel gap="8" weightx="1" columns="2">
				<textfield action="filterTranslations(this.text)" name="tfTranslationFilter" weightx="1" enabled="false"/>
				<button type="link" icon="/icons/search.png" text=""/>
				
				<tabbedpane action="tabChanged(this.selected)" name="tpTranslations" weightx="1" weighty="1" colspan="2">
					<tab text="i18n.plugin.translate.translations.all" name="tbAll">
						<panel gap="8" columns="1" weightx="1" weighty="1">
							<table selection="multiple" name="tbAllTranslations" weightx="1" weighty="1" perform="editText">
								<header>
									<column text="Key"/>
									<column text="i18n.common.default"/>
									<column name="clCurrentLanguage"/>
								</header>
							</table>
						</panel>
					</tab>
					<tab text="i18n.plugin.translate.translations.missing" name="tbMissing">
						<table selection="multiple" name="tbMissingTranslations" perform="editText">
							<header>
								<column text="Key"/>
								<column text="i18n.common.default"/>
								<column name="clCurrentLanguage"/>
							</header>
						</table>
					</tab>
					<tab text="i18n.plugin.translate.translations.extra" name="tbExtra">
						<table selection="multiple" name="tbExtraTranslations" perform="editText">
							<header>
								<column text="Key"/>
								<column text="i18n.common.default"/>
								<column name="clCurrentLanguage"/>
							</header>
						</table>
					</tab>
				</tabbedpane>
				<panel gap="8" colspan="2" halign="right">
					<button text="i18n.action.edit" icon="/icons/edit.png" action="editText"/>
					<button text="i18n.action.delete" icon="/icons/delete.png" action="confirmDeleteText"/>
				</panel>
			</panel>
		</splitpane>
   		<button tooltip="i18n.tooltip.click.for.help" valign="bottom" action="showHelpPage('translation.htm')" icon="/icons/big_help.png" type="link"/>
	</panel>
</tab>