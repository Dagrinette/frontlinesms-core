<?xml version="1.0" encoding="UTF-8"?>
<dialog closable="true" resizable="true" close="closeDialog" width="700" height="500" bottom="4" gap="8" icon="/icons/keyword.png" left="4" modal="true" name="settingsDialog" right="4" text="Settings" top="4" columns="1">
	<splitpane divider="200" weightx="1" weighty="1">
		<panel columns="1" gap="10">
			<tree name="generalTree" weightx="1" weighty="1" action="selectionChanged(this)">
			</tree>
			<tree name="pluginTree" weightx="1" weighty="1" action="selectionChanged(this)">
			</tree>
		</panel>
	
		<panel name="pnDisplaySettings">
			<!-- Actual settings are displayed in this panel -->
		</panel>
	</splitpane>
	
	<panel gap="5" halign="center">
		<button text="i18n.action.save" name="btSave" halign="center" icon="/icons/tick.png" enabled="false"/>
		<button text="i18n.action.cancel" halign="center" icon="/icons/cross.png" action="closeDialog"/>
	</panel>
</dialog>
