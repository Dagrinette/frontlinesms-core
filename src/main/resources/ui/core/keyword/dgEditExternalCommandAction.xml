<?xml version="1.0" encoding="UTF-8"?>
<dialog closable="true" close="removeDialog" bottom="10" columns="3" gap="10" icon="/icons/cmd.png" left="5" modal="true" name="externalCommandDialog" resizable="true" right="5" text="i18n.common.external.command" top="10">
    <panel bottom="-5" colspan="3" gap="20" left="1" right="1" weightx="1">
        <label text="i18n.common.execution.type"/>
        <checkbox action="setText(tfCommand,'http://')" group="cmdType" icon="/icons/httpRequest.png" name="rbTypeHTTP" selected="true" text="i18n.common.http.request" weightx="1"/>
        <checkbox action="setText(tfCommand,'')" group="cmdType" icon="/icons/cmd.png" name="rbTypeCL" text="i18n.common.command.line.execution" weightx="1"/>
    </panel>
    <panel border="true" bottom="5" colspan="3" columns="2" gap="10" left="5" right="5" text="i18n.common.execution.details" top="5" weightx="1" weighty="1">
        <label icon="/icons/cmd.png" text="i18n.common.command"/>
        <textfield columns="60" name="tfCommand" text="http://" weightx="1"/>
        <label text="i18n.sentence.you.can.include"/>
        <panel gap="10">
            <button action="addConstantToCommand(tfCommand.text, tfCommand, 0)" icon="/icons/user_sender.png" name="btSenderName" text="i18n.common.sender.name" weightx="1"/>
            <button action="addConstantToCommand(tfCommand.text, tfCommand, 1)" icon="/icons/phone_number.png" name="btSenderNumber" text="i18n.common.message.sender.number" weightx="1"/>
            <button action="addConstantToCommand(tfCommand.text, tfCommand, 3)" icon="/icons/keyword.png" name="btKeyword" text="i18n.common.keyword" weightx="1"/>
            <button action="addConstantToCommand(tfCommand.text, tfCommand, 2)" icon="/icons/message.png" name="btMsgContent" text="i18n.common.message.content" weightx="1"/>
        </panel>
        <separator colspan="2"/>
        <label text="i18n.common.response.type"/>
        <panel gap="10">
            <checkbox action="setResponseType('simple')" group="responseType" icon="/icons/externalCommand_plaintText.png" name="rbPlainText" selected="true" text="i18n.common.plain.text" weightx="1"/>
            <checkbox action="setResponseType('commands')" group="responseType" icon="/icons/externalCommand_listCommands.png" name="rbFrontlineCommands" text="i18n.common.frontline.commands" weightx="1"/>
            <checkbox action="setResponseType('none')" group="responseType" icon="/icons/externalCommand_noResponse.png" name="rbNoResponse" text="i18n.common.do.not.wait.response" weightx="1"/>
        </panel>
        <panel border="true" bottom="5" colspan="2" columns="1" gap="10" left="5" name="pnResponse" right="5" text="i18n.common.what.to.do.response" top="5" weighty="1">
            <label icon="/icons/message.png" text="i18n.common.message"/>
                <textarea colspan="2" name="tfMessage" weightx="1" weighty="1"/>
            <panel gap="5">
            <label halign="left" text="i18n.sentence.you.can.include"/>
                <button action="addConstantToCommand(tfMessage.text,tfMessage, 4)" icon="/icons/externalCommand_response.png" name="btIncludeResponse" tooltip="i18n.action.include.response" valign="center" weightx="1"/>
			    <button action="addConstantToCommand(tfMessage.text, tfMessage, 0)" name="btSenderName" icon="/icons/recipient.png" tooltip="i18n.common.sender.name" weightx="1"/>
			    <button action="addConstantToCommand(tfMessage.text, tfMessage, 1)" name="btSenderNumber" icon="/icons/recipient_number.png" tooltip="i18n.common.message.sender.number" weightx="1"/>
		        <button action="addConstantToCommand(tfMessage.text, tfMessage, 5)" name="btRecipientName" icon="/icons/sender.png" tooltip="i18n.common.recipient.name" weightx="1"/>
			    <button action="addConstantToCommand(tfMessage.text, tfMessage, 6)" name="btRecipientNumber" icon="/icons/sender_number.png" tooltip="i18n.common.message.recipient.number" weightx="1"/>
			    <button action="addConstantToCommand(tfMessage.text, tfMessage, 3)" name="btKeyword" icon="/icons/keyword.png" tooltip="i18n.common.keyword" weightx="1"/>
			    <button action="addConstantToCommand(tfMessage.text, tfMessage, 2)" name="btMessageContent" icon="/icons/message.png" tooltip="i18n.common.message.content" weightx="1"/>
		   </panel>
            <checkbox icon="/icons/sms_autoReply.png" name="cbAutoReply" selected="true" text="i18n.common.send.auto.reply"/>
            <checkbox action="handleForwardChanged(this.selected)" icon="/icons/sms_autoForward.png" name="cbForward" text="i18n.common.forward.to.group" weightx="1"/>
            <list enabled="false" name="groupList" weightx="1"/>
        </panel>
    </panel>
    <separator colspan="3"/>
    <panel colspan="3" gap="20" halign="center" left="5" right="5">
        <button type="default" icon="/icons/tick.png" text="i18n.action.done" action="save" name="btSave"/>
        <button type="cancel" action="removeDialog" icon="/icons/cross.png" text="i18n.action.cancel"/>
    </panel>
</dialog>
