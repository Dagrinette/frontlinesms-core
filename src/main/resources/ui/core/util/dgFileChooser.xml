<?xml version="1.0" encoding="UTF-8"?>
<dialog closable="true" close="remove" bottom="4" columns="1" gap="4" height="500" icon="/icons/file.png" left="4" modal="true" name="fileChooserForm" resizable="true" right="4" text="i18n.common.file.chooser" top="4" width="500">
    <panel gap="5">
	   	<textfield name="lbTitle" weightx="2" editable="false" columns="30"/>
	    <button action="goUp" icon="/icons/fileChooser_goUp.png" text="i18n.action.go.up.directory" name="btGoUp" halign="right"/>
    </panel>
    
    <list name="lsFiles" perform="handleListExecute" rowspan="20" weightx="1" weighty="1" action="handleListSelectionChanged"/>

    <panel gap="5">    
	    <label text="i18n.common.filename"/>
	    <textfield name="tfFilename" perform="goToDir" weightx="2"/>
    </panel>
    
    <panel halign="center" gap="5">
	    <button action="done" icon="/icons/tick.png" name="btDone" text="i18n.action.done" weightx="1"/>
	    <button action="remove" icon="/icons/cross.png" text="i18n.action.cancel"/>
    </panel>
</dialog>