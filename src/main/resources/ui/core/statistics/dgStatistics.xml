<?xml version="1.0" encoding="UTF-8"?>
<dialog closable="true" close="removeDialog" icon="/icons/hits.png" bottom="4" columns="2" gap="8" left="4" modal="true" name="statsDialog" right="4" text="i18n.stats.dialog.statistics" top="4">
    <panel bottom="10" columns="1" gap="10" left="10" right="10" top="10" halign="center">
	    <panel columns="1" gap="6" weightx="1">
	        <label font="13 bold" text="i18n.stats.dialog.text.1" icon="/icons/httprequest.png"/>
	        <label name="i18n.stats.dialog.text.2"/>
	        <label text="i18n.stats.dialog.text.3"/>
	        <label text="i18n.stats.dialog.text.4"/>
	    	<label font="11" text="i18n.stats.dialog.send.type"/>
	    </panel>
	    <panel columns="1" gap="6" weightx="2">
	    	<label font="bold" text="Anonymous data [i18n] XXX" icon="/icons/database_table.png"/>
	    	<table name="statsContent" weightx="1" weighty="1" height="140" width="140">
	        	<header>
	            	<column icon="/icons/help.png" text="i18n.stats.dialog.data" width="250"/>
	            	<column icon="/icons/file.png" text="i18n.stats.dialog.value" width="50"/>
				</header>
			</table>
	    </panel>
	    
	    <panel columns="2" gap="5">
	    	<label font="bold" text="Additional information [i18n] XXX" icon="/icons/database_table.png" colspan="2"/>
	    	
	    	<label text="Primary category [i18n] XXX" icon="/icons/note.png" weightx="1"/>
	    	<combobox editable="false" name="cbSector">
				<choice text=""/>
				<choice text="Agriculture"/> 
				<choice text="Conservation"/> 
				<choice text="Economic Development"/> 
				<choice text="Education"/> 
				<choice text="Elections"/> 
				<choice text="Emergency Response"/> 
				<choice text="Gender"/> 
				<choice text="Health"/> 
				<choice text="Human Rights"/> 
				<choice text="Humanitarian Assistance"/> 
				<choice text="Media"/> 
				<choice text="Political"/>
				<choice text="Other"/> 
	    	</combobox>
	    	
	    	<label text="Primary country [i18n] XXX" icon="/icons/sms_http.png"/>
	    	<combobox editable="false" name="cbCountry">
				<choice text=""/>
			</combobox>
	    	<label/>
	    	<label text="Enter your email address here to opt in to our newsletter and receive updates [i18n] XXX" colspan="2"/>
	    	<label text="on new versions and features. [i18n] XXX" colspan="2"/>
	    	<label text="Email address [i18n] XXX" icon="/icons/email.png"/>
	    	<textfield name="tfEmail"/>
	    </panel>
	    
	    <panel columns="1" gap="5">
	    	<label text="Can we collect this information? [i18n] XXX"/>
		</panel>
		<panel gap="5" halign="center">
		    <button icon="/icons/tick.png" action="sendStatistics" name="contactSelecter_okButton" text="i18n.action.yes"/>
		    <button action="removeDialog" icon="/icons/cross.png" text="i18n.action.no"/>
		</panel>
	</panel>
</dialog>
