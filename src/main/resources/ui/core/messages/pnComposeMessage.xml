<?xml version="1.0" encoding="UTF-8"?>
<panel name="pnMessage" columns="1" gap="2" weightx="2">
    <panel columns="1" gap="6" name="pnSend">
        <panel name="pnMessageRecipient" gap="10">
            <label icon="/icons/sms_receive.png" text="i18n.common.recipient.to"/>
            <textfield action="recipientChanged(this.text, tfMessage.text)" columns="20" name="tfRecipient"/>
            <button action="selectMessageRecipient" icon="/icons/user_receiver.png"/>
        </panel>
    </panel>
    <panel gap="5" weightx="1">
        <label text="i18n.sentence.remaining.characters"/>
        <label font="bold" name="lbRemainingChars" text="160"/>
        <panel gap="2" halign="right" weightx="1">
            <label font="11 bold" name="lbMsgNumber" text="0"/>
            <label icon="/icons/sms_disabled.png" name="lbFirst"/>
            <label icon="/icons/sms_disabled.png" name="lbSecond"/>
            <label icon="/icons/sms_disabled.png" name="lbThird"/>
        </panel>
    </panel>
    <textarea action="messageChanged(tfRecipient.text, this.text)" rows="8" columns="40" name="tfMessage"/>
    <panel name="pnBottom" gap="13" weightx="1">
        <panel gap="8" halign="left" weightx="1">
            <button icon="/icons/sms_send.png" name="btSend" text="i18n.common.send" enabled="false"
            		action="send"/>
        	<label font="bold" name="lbTooManyMessages" text="i18n.sentence.too.many.messages"/>
        </panel>
        <panel gap="8" halign="right" top="3" weightx="1">
            <label icon="/icons/money.png" text="i18n.common.estimated.cost"/>
            <label font="bold" name="lbEstimatedMoney"/>
        </panel>
    </panel>
</panel>
